<%# TODO: create proper memory index and show partials %>

<article id="<%= dom_id memory %>">
  <p>
    <strong>Team:</strong>
    <%= memory.team.name %>
  </p>

  <p>
    <strong>Memo:</strong>
    <%= memory.memo %>
  </p>

  <% if memory.picture %>
    <%= render partial: "teams/pictures/picture", locals: { team:, picture: memory.picture } %>
  <% end %>

  <% if memory.location %>
    <%= render partial: "teams/locations/location", locals: { team:, location: memory.location } %>
  <% end %>

  <% if memory.weblink %>
    <%= render partial: "teams/weblinks/weblink", locals: { team:, weblink: memory.weblink } %>
  <% end %>

  <% if action_name != "show" %>
    <%= link_to "Show this memory", team_memory_path(team, memory), role: "button"  %>
  <% end %>
</article>
