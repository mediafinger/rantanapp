<article id="<%= dom_id team %>">
  <p>
    <strong>Name:</strong>
    <%= team.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this team", team, role: "button"  %>
    <%= link_to 'Edit this team', edit_team_path(team), class: "secondary", role: "button"  %>
  <% end %>
</article>
