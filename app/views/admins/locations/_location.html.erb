<article id="<%= dom_id location %>">
  <p>
    <strong>Name:</strong>
    <%= location.name %>
  </p>

  <p>
    <strong>Country:</strong>
    <% iso_country = ISO3166::Country.find_country_by_alpha2(location.country_code) %>
    <%= iso_country.iso_short_name %> (<%= iso_country.alpha2 %>) <%= iso_country.emoji_flag %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= location.address %>
  </p>

  <p>
    <strong>Url:</strong>
    <%= render ExternalLinkComponent.new(url: location.url, text: location.url) %>
  </p>

  <p>
    <strong>Lat:</strong>
    <%= location.lat %>
  </p>

  <p>
    <strong>Long:</strong>
    <%= location.long %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= location.description %>
  </p>

  <p>
    <strong>Team:</strong>
    <%= location.team_yid %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this location", location, role: "button"  %>
  <% end %>
  <% if current_team == location.team %>
    <%= link_to "Edit this location", edit_location_path(location), role: "button", class: "secondary" %>
  <% end %>
</article>
