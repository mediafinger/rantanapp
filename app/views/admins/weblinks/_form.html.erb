<article>
  <%= form_with(model: weblink) do |form| %>
    <%= render partial: "shared_partials/form_validation_errors", locals: { record: weblink } %>

    <fieldset>
      <h3><legend><%= form_legend %></legend></h3>

      <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>

      <div>
        <%= form.label :url %>
        <%= form.text_field :url %>
      </div>

      <div>
        <%= form.label :description %>
        <%= form.text_area :description %>
      </div>

      <div>
        <%= form.submit %>
      </div>
    </fieldset>
  <% end %>
</article>
